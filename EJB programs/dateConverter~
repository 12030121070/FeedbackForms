        <title>JSP Page</title>
    </head>
    <body>
        <%@taglib uri="/WEB-INF/tlds/Sal" prefix="s" %>
    <s:dateForm odate="${param.odate}" choice="${param.choice}"></s:dateForm>
    </body>
</html>


